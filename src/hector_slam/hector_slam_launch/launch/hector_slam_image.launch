<?xml version="1.0"?>

<launch>

  <arg name="geotiff_map_file_path" default="$(find hector_geotiff)/maps"/>

  <!-- <param name="/use_sim_time" value="true"/> -->
  <param name="/use_sim_time" value="false"/>

  <include file="$(find hector_mapping)/launch/mapping_default.launch"/>

  <include file="$(find hector_geotiff_launch)/launch/geotiff_mapper.launch">
    <arg name="trajectory_source_frame_name" value="scanmatcher_frame"/>
    <arg name="map_file_path" value="$(arg geotiff_map_file_path)"/>
  </include>

  <node pkg="hector_compressed_map_transport" type="map_to_image_node" name="hector_height_geotiff_node" output="screen" launch-prefix="nice -n 15">
    <remap from="map" to="height_map" />
    <param name="map_file_path" type="string" value="$(find hector_geotiff)/maps" />
    <param name="map_file_base_name" type="string" value="RRL_2012_HectorDarmstadt_2m" />
    <param name="geotiff_save_period" type="double" value="55" />
    <param name="draw_background_checkerboard" type="bool" value="true" />
    <param name="draw_free_space_grid" type="bool" value="true" />
  </node>

</launch>
